generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model buy_log {
  id        Int      @id @default(autoincrement())
  user_id   Int
  users     users    @relation(fields: [user_id], references: [id])
  game_id   Int
  game      game     @relation(fields: [game_id], references: [id])
  buy_time  Int
  price     Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model category {
  id            Int    @id @default(autoincrement())
  category_name String @db.Text
  visible       Int    @default(1)
}

model game {
  id           Int        @id @default(autoincrement())
  name         String     @db.Text
  short_name   String     @unique
  day_h        Int
  day_1        Int
  day_3        Int
  day_7        Int
  day_15       Int
  day_30       Int
  day_p        Int
  download_src String     @db.Text
  img_src      String     @db.Text
  hack_img_scr String     @db.Text
  status       String     @db.Text
  detail       String     @db.Text
  game_src     String     @db.Text
  visible      Int        @default(1)
  youtube_link String?    @db.VarChar(255)
  buy_log      buy_log[]
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
  game_act     game_act[]
}

model game_act {
  id          Int      @id @default(autoincrement())
  user_id     Int
  users       users    @relation(fields: [user_id], references: [id])
  game_id     Int
  game        game     @relation(fields: [game_id], references: [id])
  exp_date    Int
  last_update Int?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model redeem_log {
  id            Int      @id @default(autoincrement())
  user_id       Int
  users         users    @relation(fields: [user_id], references: [id])
  redeem_amount Int
  time          Int?
  link          String?  @db.VarChar(255)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
}

model users {
  id                Int          @id @default(autoincrement())
  name              String       @db.VarChar(255)
  email             String       @unique(map: "email") @db.VarChar(60)
  hwid              String?
  credit            Int          @default(0)
  role              Int          @default(1)
  email_verified_at DateTime?    @db.Timestamp(0)
  password          String       @db.VarChar(255)
  remember_token    String?      @db.VarChar(100)
  created_at        DateTime?    @db.Timestamp(0)
  updated_at        DateTime?    @db.Timestamp(0)
  isActive          Boolean      @default(true)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @default(now()) @updatedAt
  buy_log           buy_log[]
  game_act          game_act[]
  redeem_log        redeem_log[]
}

model setup {
  id              Int      @id @default(autoincrement())
  trueGiftPhone   String?  @db.VarChar(255)
  reCaptchaGoogle String?  @db.VarChar(255)
  updatedAt       DateTime @updatedAt
}
